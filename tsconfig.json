{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"]
}
